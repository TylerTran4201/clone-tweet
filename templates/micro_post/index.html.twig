{% extends 'base.html.twig' %}

{% block title %}Tất cả bài viết{% endblock %}

{% block body %}
<div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-4">
    {% if posts|length > 0 %}
        {% for post in posts%}
            {{ include('micro_Post/_post.html.twig',{post: post}) }}
        {% endfor %}
    {% else %}
        <b>Chưa có gì để show</b>
    {% endif %}
</div>
{% endblock %}